(install
 (section lib)
 (package wasm_of_ocaml-compiler)
 (files runtime.wasm))

(rule
   (target runtime.wasm)
   (deps runtime.wat)
   (action
      (run wasm-opt -g --enable-gc --enable-exception-handling --enable-reference-types --enable-tail-call --enable-strings --enable-multivalue --enable-bulk-memory %{deps} -O  -o %{target})))
